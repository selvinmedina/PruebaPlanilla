@model IEnumerable<PruebaPlanilla.Models.tbCatalogoDeDeducciones>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}
<div class="col-lg-12">
<div class="ibox float-e-margins">
<div class="ibox-title">
	@Html.ActionLink("Registrar ", "Create", null, new {@class="btn btn-primary pull-right" })
	<h2>Catalogo de deducciones</h2>
</div>
<div class="ibox-content">
<table class="table table-striped table-bordered dataTable">
<thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.cde_DescripcionDeduccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cde_PorcentajeColaborador)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cde_PorcentajeEmpresa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tbTipoDeduccion.tde_Descripcion)
        </th>
        <th></th>
    </tr>
</thead>
<tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.cde_DescripcionDeduccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cde_PorcentajeColaborador) %
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cde_PorcentajeEmpresa) %
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.tbTipoDeduccion.tde_Descripcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.cde_IdDeducciones }, new {@class="btn btn-primary btn-xs"})
            @Html.ActionLink("Detalles", "Details", new { id=item.cde_IdDeducciones }, new {@class="btn btn-default btn-xs"})
        </td>
    </tr>
}
</tbody>
</table>
</div>
</div>
</div>
